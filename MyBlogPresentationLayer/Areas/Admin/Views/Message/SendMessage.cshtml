@model Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Mesaj Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Mesajlar</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Mesaj Gönder </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Mesaj Gönder</h4>
                        <p class="card-description">Aşağıdaki alanları eksiksiz doldurarak mesajınızı gönderebilirsiniz.</p>
                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label>Alıcı Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Receiver" />
                            </div>
                            <div class="form-group">
                                <label>Konu</label>
                                <input type="text" class="form-control" asp-for="Subject" />
                            </div>
                            <div class="form-group">
                                <label>Mesaj İçeriği</label>
                                <textarea class="form-control" rows="4" asp-for="MessageContent"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2"> Gönder </button>
                            <button type="reset" class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
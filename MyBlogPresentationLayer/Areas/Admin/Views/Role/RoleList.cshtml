@model List<AppRole>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Rol Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Roller</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Tüm Roller </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Rol Listesi</h4>
                        <p class="card-description">
                            Sistemde yer alan tüm rolleri aşağıda görebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Rol Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/Admin/Role/CreateRole" class="btn btn-info">Yeni Rol Girişi</a>
        </div>
    </div>
</div>


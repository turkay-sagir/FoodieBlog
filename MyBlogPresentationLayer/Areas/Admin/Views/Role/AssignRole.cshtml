@model List<AssignRoleViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Yeni Rol Atama Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Roller</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Rol Ekleme</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Rol Ekleme Paneli</h4>
                        <p class="card-description">Eklemek istediğiniz rolü seçiniz.</p>
                        <form class="forms-sample" method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].RoleId" />
                                    <input type="hidden" asp-for="@Model[i].RoleName" />
                                    <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                                </div>
                            }
                            <button style="margin-top:20px" type="submit" class="btn btn-primary mr-2"> Rol Ata </button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


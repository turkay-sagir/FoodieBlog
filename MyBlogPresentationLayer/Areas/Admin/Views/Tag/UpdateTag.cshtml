@model Tag
@{
    ViewData["Title"] = "UpdateTag";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Etiket Güncelleme Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Etiketler</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Etiket Güncelleme</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Etiket Güncelleme Paneli</h4>
                        <p class="card-description">Etiketi aşağıdaki alandan güncelleyebilirsiniz.</p>
                        <form class="forms-sample" method="post">
                            <div class="form-group">
                            <input type="hidden" asp-for="TagId" />
                            </div>
                            <div class="form-group">
                                <label>Etiket Adı</label>
                                <input type="text" class="form-control" asp-for="TagTitle" />
                            </div>
                            <button type="submit" class="btn btn-primary mr-2"> Etiketi Güncelle </button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>


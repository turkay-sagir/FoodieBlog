@model List<Article>

<div class="col-lg-8 col-md-8">
    <div class="breadcrumb__text">
        <h2>Blog Listesi: <span>Tüm Bloglar</span></h2>
        <div class="breadcrumb__option">
            <a href="#">Ana Sayfa</a>
            <span>Blog Listesi</span>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="categories__list__post__item">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="categories__post__item__pic set-bg"
                         data-setbg="@item.ThumbImageUrl">
                        <div class="post__meta">
                            <h4>@item.CreatedDate.ToString("dd")</h4>
                            <span>@item.CreatedDate.ToString("MMMM")</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="categories__post__item__text">
                        <span class="post__label">@item.Category.CategoryName</span>
                        <h3><a href="/Blog/BlogDetail/@item.ArticleId">@item.Title</a></h3>
                        <ul class="post__widget">
                            <li>by <span>@item.AppUser.Name @item.AppUser.Surname</span></li>
                            <li>3 dk okuma</li>
                            <li>
                                @if (item.Comments != null && item.Comments.Count() != null)
                                {
                                    var value = item.Comments.Count() + " Yorum";
                                    @value
                                }
                                else
                                {
                                    var value = "0 Yorum";
                                    @value
                                }
                            </li>
                        </ul>
                        <p>
                            @if (item.Detail != null && item.Detail.Length > 200)
                            {
                                var value = item.Detail.Substring(0, 200) + "...";
                                @value

                            }
                            else
                            {
                                @item.Detail
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }


</div>
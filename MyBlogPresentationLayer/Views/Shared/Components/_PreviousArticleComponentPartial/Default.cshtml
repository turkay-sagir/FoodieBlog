@model Article

@if (Model != null)
{
    <div class="col-lg-6 col-md-6 col-sm-6">
        <a href="/Blog/BlogDetail/@Model.ArticleId" class="single-post__previous">
            <h6><span class="arrow_carrot-left"></span> Önceki Blog</h6>
            <div class="single-post__previous__meta">
                <h4>@Model.CreatedDate.ToString("dd")</h4>
                <span>@Model.CreatedDate.ToString("MMM")</span>
            </div>
            <div class="single-post__previous__text">
                <span>@Model.Category.CategoryName</span>
                <h5>@Model.Title</h5>
            </div>
        </a>
    </div>
}

else
{
    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="single-post__next__text">
            <h5>Önceki blog bulunmamaktadır!</h5>
        </div>
    </div>
}